local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

-- Création de la fenêtre Rayfield
local Window = Rayfield:CreateWindow({
    Name = "Rivals Aimbot",
    LoadingTitle = "Rivals Aimbot v1.0",
    LoadingSubtitle = "By azfasty",
    Theme = "Dark",
    ConfigurationSaving = {Enabled = false}
})

-- Vérifie que le menu Rayfield charge bien
print("Rayfield UI chargé")

-- ✅ Création de l'onglet AIMBOT
local AimbotTab = Window:CreateTab("Aimbot", "crosshair")
local AimbotSection = AimbotTab:CreateSection("Aimbot Settings")

AimbotSection:CreateToggle({
    Name = "Enable Aimbot",
    CurrentValue = false,
    Flag = "Aimbot",
    Callback = function(state)
        print("Aimbot activé :", state)
    end
})

AimbotSection:CreateToggle({
    Name = "Draw FOV",
    CurrentValue = false,
    Flag = "DrawFOV",
    Callback = function(state)
        print("FOV activé :", state)
    end
})

AimbotSection:CreateSlider({
    Name = "FOV Size",
    Range = {50, 300},
    Increment = 5,
    CurrentValue = 100,
    Flag = "FOVSize",
    Callback = function(value)
        print("FOV Size :", value)
    end
})

AimbotSection:CreateSlider({
    Name = "Smoothness",
    Range = {1, 20},
    Increment = 1,
    CurrentValue = 5,
    Flag = "Smoothness",
    Callback = function(value)
        print("Smoothness :", value)
    end
})

AimbotSection:CreateColorPicker({
    Name = "FOV Color",
    Color = Color3.fromRGB(255, 255, 255),
    Flag = "FOVColor",
    Callback = function(color)
        print("FOV Color changé :", color)
    end
})

-- ✅ Création de l'onglet ESP
local EspTab = Window:CreateTab("ESP", "eye")
local EspSection = EspTab:CreateSection("ESP Settings")

EspSection:CreateToggle({
    Name = "Enable ESP",
    CurrentValue = false,
    Flag = "EnableESP",
    Callback = function(state)
        print("ESP activé :", state)
    end
})

EspSection:CreateToggle({
    Name = "Box ESP",
    CurrentValue = false,
    Flag = "BoxESP",
    Callback = function(state)
        print("Box ESP :", state)
    end
})

EspSection:CreateToggle({
    Name = "Filled Box",
    CurrentValue = false,
    Flag = "FilledBoxESP",
    Callback = function(state)
        print("Filled Box ESP :", state)
    end
})

EspSection:CreateColorPicker({
    Name = "Bone Color",
    Color = Color3.fromRGB(255, 0, 0),
    Flag = "BoneColor",
    Callback = function(color)
        print("Bone Color changé :", color)
    end
})

-- ✅ Vérification dans la console
print("Menu Rayfield chargé avec succès !")
