-- 📌 Chargement de Rayfield UI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

if not Rayfield then
    warn("❌ Rayfield UI n'a pas pu être chargé !")
    return
end
print("✅ Rayfield UI chargé avec succès !")

-- 📌 Création de la fenêtre principale
local Window = Rayfield:CreateWindow({
    Name = "Emergency Hamburg",
    LoadingTitle = "Hamburg Script v1.0",
    LoadingSubtitle = "By azfasty",
    Theme = "Dark",
    ConfigurationSaving = {Enabled = false}
})

-- 📌 Onglet Véhicule
local VehicleTab = Window:CreateTab("Véhicule", "car")
local VehicleSection = VehicleTab:CreateSection("Paramètres Véhicule")

-- 🔹 Variables
local speedBoostEnabled = false
local boostMultiplier = 2  -- Par défaut, double la vitesse

-- ✅ Toggle pour activer/désactiver le Speed Boost
VehicleTab:CreateToggle({
    Name = "Activer Speed Boost",
    CurrentValue = false,
    Flag = "SpeedBoost",
    Callback = function(state)
        speedBoostEnabled = state
    end
})

-- ✅ Slider pour régler la puissance du boost
VehicleTab:CreateSlider({
    Name = "Puissance du Boost",
    Range = {1, 5},  -- De x1 à x5
    Increment = 0.5,
    CurrentValue = boostMultiplier,
    Flag = "BoostMultiplier",
    Callback = function(value)
        boostMultiplier = value
    end
})

-- 🎯 Fonction pour appliquer le Speed Boost
local function applySpeedBoost()
    while true do
        if speedBoostEnabled then
            local vehicle = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character.Parent
            if vehicle and vehicle:FindFirstChild("Humanoid") and vehicle:FindFirstChild("VehicleSeat") then
                local seat = vehicle.VehicleSeat
                seat.Throttle = 1  -- Accélération maximale
                
                -- Augmenter la vitesse du véhicule
                if seat:FindFirstChild("Engine") then
                    local engine = seat.Engine
                    if engine:FindFirstChild("Torque") then
                        engine.Torque.Value = engine.Torque.Value * boostMultiplier
                    end
                end
            end
        end
        wait(0.1)
    end
end

-- 🔥 Lancer le Speed Boost en arrière-plan
spawn(applySpeedBoost)

-- ✅ Vérification du bon chargement
print("🔥 Speed Boost pour voiture chargé avec succès !")
