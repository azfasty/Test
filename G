-- 📌 Chargement de Rayfield UI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

if not Rayfield then
    warn("❌ Rayfield UI n'a pas pu être chargé !")
    return
end
print("✅ Rayfield UI chargé avec succès !")

-- 📌 Création de la fenêtre principale
local Window = Rayfield:CreateWindow({
    Name = "Rivals Aimbot",
    LoadingTitle = "Rivals Aimbot v1.0",
    LoadingSubtitle = "By azfasty",
    Theme = "Dark",  
    ConfigurationSaving = {Enabled = false}
})

-- 📌 Création de l'onglet Aimbot
local AimbotTab = Window:CreateTab("Aimbot", "crosshair")
local AimbotSection = AimbotTab:CreateSection("Aimbot Settings")

-- ✅ Correction de `CreateToggle()` en stockant la variable avant de l’appeler
local AimbotToggle
AimbotToggle = AimbotSection.CreateToggle(AimbotSection, {
    Name = "Enable Aimbot",
    CurrentValue = false,
    Flag = "Aimbot",
    Callback = function(state)
        print("Aimbot activé :", state)
    end
})

local FOVToggle
FOVToggle = AimbotSection.CreateToggle(AimbotSection, {
    Name = "Draw FOV",
    CurrentValue = false,
    Flag = "DrawFOV",
    Callback = function(state)
        print("FOV activé :", state)
    end
})

print("🔥 Aimbot & ESP chargés avec Rayfield !")
