-- ğŸ“Œ Chargement de Rayfield UI
local Rayfield = loadstring(game:HttpGet("https://sirius.menu/rayfield"))()

if not Rayfield then
    warn("âŒ Rayfield UI n'a pas pu Ãªtre chargÃ© !")
    return
end
print("âœ… Rayfield UI chargÃ© avec succÃ¨s !")

-- ğŸ“Œ CrÃ©ation de la fenÃªtre principale
local Window = Rayfield:CreateWindow({
    Name = "Emergency Hamburg",
    LoadingTitle = "Hamburg Script v1.0",
    LoadingSubtitle = "By azfasty",
    Theme = "Dark",
    ConfigurationSaving = {Enabled = false}
})

-- ğŸ“Œ Onglet VÃ©hicule
local VehicleTab = Window:CreateTab("VÃ©hicule", "car")
local VehicleSection = VehicleTab:CreateSection("ParamÃ¨tres VÃ©hicule")

-- ğŸ”¹ Variables
local speedBoostEnabled = false
local boostMultiplier = 2  -- Par dÃ©faut, double la vitesse

-- âœ… Toggle pour activer/dÃ©sactiver le Speed Boost
VehicleTab:CreateToggle({
    Name = "Activer Speed Boost",
    CurrentValue = false,
    Flag = "SpeedBoost",
    Callback = function(state)
        speedBoostEnabled = state
    end
})

-- âœ… Slider pour rÃ©gler la puissance du boost
VehicleTab:CreateSlider({
    Name = "Puissance du Boost",
    Range = {1, 5},  -- De x1 Ã  x5
    Increment = 0.5,
    CurrentValue = boostMultiplier,
    Flag = "BoostMultiplier",
    Callback = function(value)
        boostMultiplier = value
    end
})

-- ğŸ¯ Fonction pour appliquer le Speed Boost
local function applySpeedBoost()
    while true do
        if speedBoostEnabled then
            local vehicle = game.Players.LocalPlayer.Character and game.Players.LocalPlayer.Character.Parent
            if vehicle and vehicle:FindFirstChild("Humanoid") and vehicle:FindFirstChild("VehicleSeat") then
                local seat = vehicle.VehicleSeat
                seat.Throttle = 1  -- AccÃ©lÃ©ration maximale
                
                -- Augmenter la vitesse du vÃ©hicule
                if seat:FindFirstChild("Engine") then
                    local engine = seat.Engine
                    if engine:FindFirstChild("Torque") then
                        engine.Torque.Value = engine.Torque.Value * boostMultiplier
                    end
                end
            end
        end
        wait(0.1)
    end
end

-- ğŸ”¥ Lancer le Speed Boost en arriÃ¨re-plan
spawn(applySpeedBoost)

-- âœ… VÃ©rification du bon chargement
print("ğŸ”¥ Speed Boost pour voiture chargÃ© avec succÃ¨s !")
